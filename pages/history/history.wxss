/* pages/history/history.wxss */

.weui-loadmore__tips_in-line{
  background-color: #f8f8f8;
}

.history_item {
  background-color: #fff;
  padding: 10px 15px;
  position: relative;
  /* width: 100%; */
  height: 60px;
}

.history_item:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}

.history_item:first-child:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}

.cover_img {
  width: 60px;
  height: 60px;
  display: block;
  float: left;
}

.item_bd {
  height: 35px;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.item_ft {
  height: 20px;
  margin-top: 5x;
  display: flex;
  justify-content: space-between;
}

.locDesc {
  font-size: 16px;
  color: #000;
  line-height: 35px;
}

.seq {
  line-height: 22px;
  width: 20px;
  height: 20px;
  font-size: 13px;
  color: #fff;
  background-color: #999;
  border-radius: 50%;
  text-align: center;
}

.by {
  font-size: 12px;
  color: #999;
  line-height: 20px;
}

.locDesc, .by {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 15px;
}

.credit {
  font-size: 12px;
  line-height: 20px;
  text-align: right;
  flex-shrink: 0;
  color: #999;
}
